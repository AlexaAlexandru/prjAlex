@page "/Team"

<PageTitle>Meet the team</PageTitle>

<body>
    <NavBar></NavBar>
    <section id="team" class="team">
        <div class="containerTeam" data-aos="fade-up">
            <div class="section-header">
                <h2>Our Team</h2>
                <p>Our caring professionals help each individual achieve and maintain optimal health and a positive body image through collaborative goal setting, tailored, science-based nutrition plans, and other industry best practices.</p>
            </div>
            <div class="row gy-5">
                @foreach (var item in nutritionists)
                {
                    <div class="col-xl-4 col-md-6 d-flex" data-aos="zoom-in" data-aos-delay="200">
                        <div class="team-member">
                            <div class="member-img">
                                <img src="@item.PictureUrl" class="img-fluid" alt="">
                            </div>
                            <div class="member-info">
                                <div class="social">
                                    <a href=""><i class="bi bi-twitter"></i></a>
                                    <a href=""><i class="bi bi-facebook"></i></a>
                                    <a href=""><i class="bi bi-instagram"></i></a>
                                    <a href=""><i class="bi bi-linkedin"></i></a>
                                </div>
                                <h4>@item.FirstName @item.LastName</h4>
                                <span>@item.Biography</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</body>


